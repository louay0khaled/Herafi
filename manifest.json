{
  "name": "Herafi - تطبيق الحرفيين",
  "short_name": "Herafi",
  "description": "منصة ذكية تربطك بأفضل الحرفيين القريبين منك. ابحث، قيّم، وشارك تجربتك بسهولة.",
  "start_url": "/index.html",
  "scope": "/",
  "id": "/",
  "lang": "ar",
  "dir": "rtl",
  "orientation": "portrait",
  "display": "standalone",
  "display_override": ["fullscreen", "standalone", "minimal-ui", "window-controls-overlay"],
  "background_color": "#ffffff",
  "theme_color": "#ffffff",
  "categories": ["business", "productivity", "utilities", "social"],
  "prefer_related_applications": false,

  "icons": [
    {
      "src": "/icon-72.png",
      "sizes": "72x72",
