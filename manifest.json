    },
    {
      "src": "/maskable-icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],

  "screenshots": [
    {
      "src": "/screenshot-mobile.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "الصفحة الرئيسية لتطبيق حرفي على الهاتف"
    },
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "واجهة تطبيق حرفي على الحاسوب"
    },
    {
      "src": "/widget-screenshot.png",
      "sizes": "800x600",
      "type": "image/png",
      "label": "الودجت التفاعلي للتطبيق"
    }
  ],

  "shortcuts": [
    {
      "name": "الحرفيون القريبون",
      "short_name": "قريبون",
      "description": "اعرض قائمة الحرفيين القريبين من موقعك الحالي.",
      "url": "/?view=nearby",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "تقييماتي",
      "short_name": "تقييماتي",
      "description": "اعرض جميع التقييمات التي أضفتها.",
      "url": "/?view=reviews",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "إضافة حرفي",
      "short_name": "إضافة",
      "description": "أضف حرفيًا جديدًا إلى المنصة.",
      "url": "/?add=artisan",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+herafi",
      "url": "/?ref=%s"
    }
  ],

  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*"]
        }
      ]
    }
  },

  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "auto"
  },
  "capture_links": "new-client"
}
