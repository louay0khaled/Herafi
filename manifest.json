{
  "name": "حرفي | Artisan Connect",
  "short_name": "حرفي",
  "description": "تطبيق أنيق يربط الحرفيين المهرة بالعملاء الذين يحتاجون إلى خدماتهم.",
  "lang": "ar",
  "dir": "rtl",
  "start_url": ".",
  "id": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay",
    "tabbed"
  ],
  "tab_strip": {
    "home_tab": "new-tab-page",
    "new_tab_button": {
      "url": "/"
    }
  },
  "orientation": "portrait-primary",
  "background_color": "#F7F5F2",
  "theme_color": "#0B2545",
  "categories": [
    "business",
    "lifestyle",
    "utilities"
  ],
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon.png",
      "sizes": "any",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/maskable-icon.png",
      "sizes": "any",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "عرض قائمة الحرفيين على الكمبيوتر"
    },
    {
      "src": "/screenshot-mobile.png",
      "sizes": "640x1136",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "عرض صفحة الحرفي على الموبايل"
    }
  ],
  "shortcuts": [
    {
      "name": "ابحث عن حرفي",
      "short_name": "بحث",
      "description": "ابحث عن حرفيين مهرة بالقرب منك",
      "url": "/",
      "icons": [
        {
          "src": "/icon.png",
          "sizes": "any",
          "type": "image/png"
        }
      ]
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [
          ".txt"
        ],
        "application/artisan+json": [
          ".artisan"
        ]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+artisan",
      "url": "/handle-protocol?id=%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text"
    }
  },
  "widgets": [
    {
      "name": "حرفي متميز",
      "description": "عرض حرفي متميز من قائمتك",
      "tag": "featured-artisan",
      "template": "ms-adaptive-card",
      "data": "/widget-data.json",
      "screenshots": [
        {
          "src": "/widget-screenshot.png",
          "sizes": "600x600",
          "type": "image/png"
        }
      ],
      "icons": [
        {
          "src": "/icon.png",
          "sizes": "any",
          "type": "image/png"
        }
      ]
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "note_taking": {
    "new_note_url": "/new-note"
  }
}